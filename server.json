{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.tomallicino/mcpmint",
  "title": "MCPMint",
  "description": "Capture-first compiler for minimal, governed MCP tool surfaces.",
  "version": "0.1.0-alpha.4",
  "packages": [
    {
      "registryType": "pypi",
      "identifier": "mcpmint",
      "version": "0.1.0a4",
      "transport": {
        "type": "stdio"
      },
      "runtimeHint": "uvx",
      "packageArguments": [
        {
          "type": "positional",
          "value": "mcp"
        },
        {
          "type": "positional",
          "value": "serve"
        },
        {
          "type": "named",
          "name": "--toolpack",
          "description": "Absolute path to toolpack.yaml generated by mcpmint mint",
          "format": "filepath",
          "isRequired": true,
          "value": "{toolpack_path}",
          "variables": {
            "toolpack_path": {
              "description": "Path to toolpack.yaml",
              "format": "filepath",
              "isRequired": true
            }
          }
        }
      ]
    }
  ],
  "repository": {
    "url": "https://github.com/tomallicino/MCPMint",
    "source": "github"
  },
  "websiteUrl": "https://github.com/tomallicino/MCPMint"
}
