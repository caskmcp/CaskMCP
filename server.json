{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.caskmcp/caskmcp",
  "title": "CaskMCP",
  "description": "Capture-first compiler for minimal, governed MCP tool surfaces.",
  "version": "0.2.0-beta.3",
  "packages": [
    {
      "registryType": "pypi",
      "identifier": "caskmcp",
      "version": "0.2.0b3",
      "transport": {
        "type": "stdio"
      },
      "runtimeHint": "uvx",
      "packageArguments": [
        {
          "type": "positional",
          "value": "mcp"
        },
        {
          "type": "positional",
          "value": "serve"
        },
        {
          "type": "named",
          "name": "--toolpack",
          "description": "Absolute path to toolpack.yaml generated by caskmcp mint",
          "format": "filepath",
          "isRequired": true,
          "value": "{toolpack_path}",
          "variables": {
            "toolpack_path": {
              "description": "Path to toolpack.yaml",
              "format": "filepath",
              "isRequired": true
            }
          }
        }
      ]
    }
  ],
  "repository": {
    "url": "https://github.com/caskmcp/CaskMCP",
    "source": "github"
  },
  "websiteUrl": "https://github.com/caskmcp/CaskMCP"
}
