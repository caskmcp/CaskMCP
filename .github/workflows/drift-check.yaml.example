# Example workflow for API drift detection
# Copy this to .github/workflows/drift-check.yaml and customize for your project

name: API Drift Check

on:
  pull_request:
    branches: [main]
  schedule:
    # Run daily at 6 AM UTC
    - cron: '0 6 * * *'
  workflow_dispatch:
    inputs:
      baseline_path:
        description: 'Path to baseline file'
        required: false
        default: './baseline.json'

jobs:
  drift-check:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Install CaskMCP
        run: pip install caskmcp

      - name: Import HAR file
        run: |
          caskmcp capture import ./fixtures/api-traffic.har \
            --allowed-hosts api.example.com \
            --name "CI Capture $(date +%Y%m%d)"

      - name: Get capture ID
        id: capture
        run: |
          CAPTURE_ID=$(ls -1t .caskmcp/captures/ 2>/dev/null | head -1)
          echo "id=$CAPTURE_ID" >> $GITHUB_OUTPUT

      - name: Check for drift
        id: drift
        continue-on-error: true
        run: |
          caskmcp drift \
            --baseline ./baseline.json \
            --capture ${{ steps.capture.outputs.id }} \
            --format both

      - name: Upload drift report
        if: steps.drift.outcome == 'failure'
        uses: actions/upload-artifact@v4
        with:
          name: drift-report
          path: .caskmcp/reports/

      - name: Comment on PR
        if: github.event_name == 'pull_request' && steps.drift.outcome == 'failure'
        uses: actions/github-script@v7
        with:
          script: |
            const fs = require('fs');
            const reportPath = '.caskmcp/reports/drift.md';

            if (fs.existsSync(reportPath)) {
              const report = fs.readFileSync(reportPath, 'utf8');

              github.rest.issues.createComment({
                issue_number: context.issue.number,
                owner: context.repo.owner,
                repo: context.repo.repo,
                body: `## API Drift Detected\n\n${report.substring(0, 60000)}`
              });
            }

      - name: Fail on breaking changes
        if: steps.drift.outcome == 'failure'
        run: |
          echo "Breaking API changes detected. See drift report for details."
          exit 1
